{
  "name": "noize-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/badazzdev/noize-app.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/badazzdev/noize-app/issues"
  },
  "homepage": "https://github.com/badazzdev/noize-app#readme",
  "scripts": {
    "start": "cd packages/server && node index",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "npm run dev --prefix packages/server",
    "client": "npm run dev --prefix packages/client",
    "install-packages": "npm i && npm i --prefix packages/client && npm i --prefix packages/server",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix packages/client && npm install --prefix packages/server && npm run build --prefix packages/client",
    "test": "eslint \"**/*.js\""
  },
  "devDependencies": {
    "babel-eslint": "10.1.0",
    "concurrently": "5.3.0",
    "eslint": "7.8.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.6",
    "husky": "4.3.0",
    "prettier": "2.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test",
      "pre-push": "npm run test"
    }
  }
}
