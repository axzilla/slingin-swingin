{
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "npm run dev --prefix packages/api",
    "client": "npm run dev --prefix packages/app",
    "test": "eslint \"**/*.js\"",
    "deploy-api-production": "git subtree push --prefix packages/api heroku-api-production master",
    "deploy-api-production-force": "git push heroku-api-production `git subtree split --prefix packages/api master`:master --force",
    "deploy-app-production": "cd packages/app && now --prod"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ],
    "*.{js}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.7.2",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "babel-plugin-styled-components": "1.10.6",
    "concurrently": "5.0.0",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.5.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.16.0",
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2"
  },
  "dependencies": {
    "react": "16.12.0"
  }
}
